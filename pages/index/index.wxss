view {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.navbar {
    background: #fff;
    width: 100%;
    white-space: nowrap;
    padding-bottom: 20rpx;
}

.main {
    background: #fff;
    width: 100%;
    height: 100%;
    white-space: nowrap;
    padding-bottom: 20rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.navbar .item {
    position: relative;
    flex: auto;
    display: inline-block;
    padding-bottom: 5rpx;
    padding-right: 20rpx;
}

.navbar .item.active {
    color: #FFCC00;
    text-decoration: none;
    border-bottom: 1px solid #FFCC00;
    display: inline-block;
    padding-bottom: 5rpx;
}